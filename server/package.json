{
  "name": "cams-backend",
  "version": "1.0.0",
  "description": "CAMS Mold Management System - Backend API",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "build": "npm run build:client && npm run copy:client",
    "build:client": "cd ../client && npm install && npm run build",
    "copy:client": "rm -rf public && mkdir public && cp -r ../client/dist/* public/",
    "postinstall": "npm run build || echo 'Client build skipped'",
    "migrate": "sequelize-cli db:migrate",
    "seed": "sequelize-cli db:seed:all",
    "seed:data": "node seed-data.js",
    "seed:gps": "node seed-gps-locations.js",
    "seed:all": "node seed-data.js && node seed-gps-locations.js",
    "db:migrate": "sequelize-cli db:migrate",
    "db:seed": "sequelize-cli db:seed:all",
    "db:reset": "sequelize-cli db:migrate:undo:all && sequelize-cli db:migrate && sequelize-cli db:seed:all"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.450.0",
    "aws-sdk": "^2.1498.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "exceljs": "^4.3.0",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "multer-s3": "^3.0.1",
    "pdfkit": "^0.17.2",
    "pg": "^8.11.3",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.35.0",
    "uuid": "^9.0.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "sequelize-cli": "^6.6.2"
  },
  "engines": {
    "node": "18.x"
  }
}
